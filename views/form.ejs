<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs'); %>
</head>
<body>
        <header class="w-full">
            <%- include('./partials/header.ejs'); %> 
        </header>
        <section class=" grid bg-white mx-32 my-6 min-h-0 shadow-lg border-2 border-gray-400">
            <form class="justify-self-center border-2 border-gray-300 my-8 px-6" enctype="multipart/form-data" method="POST"
            action="/form_update?_method=PUT">
                
                <h1 class="text-center my-4">ADD ITEM</h1>
                <% for(const i in product){ %>
                    <%= product[i]._id %>
                <input type="hidden" type="text" name="id" value="<%= product[i]._id %>">
                <input type="hidden" type="text" name="name" value="<%= product[i].name %>">
                <input placeholder="Name" class="h-8 w-72 rounded outline-none border-2 border-gray-400 my-2" name="productName" type="text" value=<%= product[i].productName %> /><br/>
                <input placeholder="price" class="h-8 w-72 rounded outline-none border-2 border-gray-400 my-2" value=<%= product[i].price %> type="text" name="price" /><br/>
                <input type="file" name="image" class="my-4"/><br/>
                <textarea placeholder="description" class="w-72 h-36 rounded outline-none border-2 border-gray-400" type="text" name="description"><%= product[i].description %></textarea><br/>
                <button class="my-4 bg-green-400 text-white w-20 h-8 rounded" type="submit">Add Item</button>
                <% } %> 
            </form>
        </section>
        <footer class="bg-gray-800 h-24 text-center text-white">
            <%- include('./partials/footer'); %>>
        </footer>
</body>
</html>