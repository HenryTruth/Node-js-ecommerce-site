<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs'); %>
<body>
    <header class="w-full">
        <%- include('./partials/header.ejs'); %> 
    </header>
    <% if(!product){ %>
        <h1>No Items</h1>
    <% } else { %>
            <section class=" grid grid-cols-4 bg-gray-200 mx-32 my-6 min-h-0">
                    <% for(const item in product){ %> 
                    <div class="bg-white w-52 m-4 justify-self-center h-80 rounded shadow-lg grid grid-rows-2">
                        <img src='./uploads/<%= product[item].filePath %>' class="w-40 mx-auto m-4"/>
                        <div>
                            <p class="text-center text-xl"><span class="text-red-600">#</span><%= product[item].price %></p>
                            <P class="text-center"><%=product[item].productName %> </P>
                            <a href="/item/<%= product[item]._id %>">
                                <button class="text-center text-white rounded-md bg-green-400 ml-12 mt-4 py-2 px-6">checkout</button>
                            </a>
                        </div>
                    </div>
                    <% } %>
            </section>
        <% } %>
    <footer class="bg-gray-800 h-24 text-center text-white">
        <%- include('./partials/footer'); %>
    </footer>
</body>
</html>